<div class="row">   
    <div class="col-md-12"> 
        <h2>Employees <a href="/employees/add" class="btn btn-success pull-right">Add New Employee</a></h2> 
        <div class="table-responsive">
            <table class="table">
                <thread>
                    <tr>
                        <th scope="col">Employee Num</th>
                        <th scope="col">Full Name</th>
                        <th scope="col">Email</th>
                        <th scope="col">Address</th>
                        <th scope="col">Manager ID</th>
                        <th scope="col">Status</th>
                        <th scope="col">Department</th>
                        <th scope="col">Hired On</th>
                    </tr>
                </thread>
                <tbody>
                    {{#each data}}
                    <tr>
                        <th scope="row">{{this.employeeNum}}</th>
                        <td><a href="/employee/{{this.employeeNum}}">{{this.firstName}} {{this.lastName}}</a></td>
                        <td><a href="mailto:{{this.email}}">{{this.email}}</a></td>
                        <td>{{this.addressStreet}} {{this.addressCity}} {{this.addressState}} {{this.addressPostal}}</td>
                        <td><a href="/employees?manager={{this.employeeManagerNum}}">{{this.employeeManagerNum}}</a></td>
                        <td><a href="/employees?status={{this.status}}">{{this.status}}</a></td>
                        <td><a href="/employees?department={{this.department}}">{{this.department}}</a></td>
                        <td>{{this.hireDate}}</td>
                        <td><a href="/employees/delete/{{this.employeeNum}}" class="btn btn-danger">remove</a></td>
                    </tr>   
                    {{/each}}
                </tbody>
            </table>
            {{#unless this.employeeNum}}
                <div class="col-md-12 text-center">
                    <strong>{{message}}</strong>
                </div>
            {{/unless}}
        </div>
    </div> 
 